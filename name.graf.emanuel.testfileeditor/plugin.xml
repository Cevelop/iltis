<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="C++ Test File Editor"
            extensions="txt,rts,awts"
            icon="icons/test_file.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="name.graf.emanuel.testfileeditor.ui.Editor"
            id="name.graf.emanuel.testfileeditor.editors.TestFileEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editors.documentProviders">
      <provider
            class="org.eclipse.ui.editors.text.TextFileDocumentProvider"
            id="org.eclipse.ui.editors.text.StorageDocumentProvider"
            inputTypes="org.eclipse.ui.IStorageEditorInput"/>
   </extension>
   <extension
         id="TestFileDocumentSetupParticipant"
         point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            class="name.graf.emanuel.testfileeditor.ui.support.editor.DocumentSetupParticipant"
            extensions="txt"/>
   </extension>
   <extension
         point="org.eclipse.ui.workbench.texteditor.rulerColumns">
      <column
            class="name.graf.emanuel.testfileeditor.ui.VirtualLineNumberRuler"
            enabled="true"
            global="true"
            id="name.graf.emanuel.testfileeditor.TestFileRulerColumn"
            includeInMenu="true"
            name="C++ Test-File sub-file-relative ruler">
         <placement
               gravity="1.0">
         </placement>
         <targetEditor
               id="name.graf.emanuel.testfileeditor.editors.TestFileEditor">
         </targetEditor>
         <targetClass
               class="name.graf.emanuel.testfileeditor.ui.Editor">
         </targetClass>
      </column>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="name.graf.emanuel.testfileeditor.command.JumpToRTS"
            name="Jump to RTS">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="name.graf.emanuel.testfileeditor.ui.JumpToRTSHandler"
            commandId="name.graf.emanuel.testfileeditor.command.JumpToRTS">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.junit.ResultView?after=additions">
         <command
               commandId="name.graf.emanuel.testfileeditor.command.JumpToRTS"
               label="Jump to RTS"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
